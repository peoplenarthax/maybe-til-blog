---
import ThemeToggle from "../components/ThemeToggle.astro";

export interface Props {
  title: string;
  description: string;
  image?: string;
  type?: string;
  currentPage?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const {
  title,
  description,
  image = "/og-image.jpg",
  type = "website",
  currentPage = "",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <!-- Theme initialization script (MUST be first to prevent FOUC) -->
    <script is:inline>
      // Execute immediately before ANY styles or content load
      (function () {
        const getStoredTheme = () => {
          try {
            return localStorage.getItem("theme");
          } catch (e) {
            return null;
          }
        };
        const getSystemPreference = () =>
          window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light";
        
        // Use stored theme, fallback to system preference
        const theme = getStoredTheme() || getSystemPreference();

        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>

    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Author and Site Meta -->
    <meta name="author" content="Angel Paredes" />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <link rel="alternate" type="application/rss+xml" title="Angel Paredes RSS Feed" href="/rss.xml" />
    <link rel="author" type="text/plain" href="/humans.txt" />
    
    <!-- Additional Meta for GEO (Generative Engine Optimization) -->
    <meta name="keywords" content="software engineering, engineering management, problem solving, frontend development, React, TypeScript, team leadership, career development, learning" />
    <meta property="article:author" content="Angel Paredes" />
    <meta name="twitter:creator" content="@peoplenarthax" />
    
    <!-- JSON-LD Schema for Person -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Angel Paredes",
        "alternateName": "Angel Paredes Barato",
        "url": "https://angelpared.es",
        "image": "https://angelpared.es/og-image.jpg",
        "jobTitle": "Engineering Manager",
        "description": "Engineering Manager and holistic learnaholic. I write about problem-solving, software engineering, management, and the human side of building software.",
        "knowsAbout": ["Software Engineering", "Engineering Management", "Problem Solving", "Frontend Development", "Team Leadership", "Micro Frontends", "React", "JavaScript", "TypeScript"],
        "sameAs": [
          "https://github.com/peoplenarthax",
          "https://linkedin.com/in/angelpbarato"
        ],
        "alumniOf": [
          {
            "@type": "CollegeOrUniversity",
            "name": "Universidad PolitÃ©cnica de Madrid"
          }
        ],
        "worksFor": {
          "@type": "Organization",
          "name": "Datadog"
        }
      }
    </script>

    <!-- JSON-LD Schema for Website -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Angel Paredes",
        "alternateName": "angelpared.es",
        "url": "https://angelpared.es",
        "description": "Personal blog about software engineering, management, problem-solving, and learning.",
        "author": {
          "@type": "Person",
          "name": "Angel Paredes"
        },
        "inLanguage": "en-US",
        "copyrightYear": new Date().getFullYear(),
        "copyrightHolder": {
          "@type": "Person",
          "name": "Angel Paredes"
        }
      }
    </script>

    <!-- Preload critical fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body
    class="bg-light-gradient dark:bg-dark-gradient bg-no-repeat bg-cover bg-fixed text-text-light dark:text-text-dark font-inter min-h-screen"
